generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categoria {
  id        String         @id @default(uuid())
  nome      String         @unique
  createdAt DateTime       @default(now())
  itens     ItemCardapio[]
}

model ItemCardapio {
  id          String       @id @default(uuid())
  nome        String
  descricao   String?
  descricaoES String?
  descricaoEN String?
  preco       Decimal      @db.Decimal(10, 2)
  categoriaId String
  createdAt   DateTime     @default(now())
  img         String?
  peso        Int?
  selo        String?
  pedidos     PedidoItem[]
  categoria   Categoria    @relation(fields: [categoriaId], references: [id])

  @@map("itens_cardapio")
}

model Pedido {
  id              String       @id @default(uuid())
  clienteNome     String?
  clienteTelefone String?
  status          PedidoStatus @default(PENDENTE)
  total           Decimal      @db.Decimal(10, 2)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  itens           PedidoItem[]
}

model PedidoItem {
  id         String       @id @default(uuid())
  pedidoId   String
  itemId     String
  quantidade Int
  precoUnit  Decimal      @db.Decimal(10, 2)
  observacao String?
  item       ItemCardapio @relation(fields: [itemId], references: [id])
  pedido     Pedido       @relation(fields: [pedidoId], references: [id])
}

model TransacaoPagamento {
  id        String   @id @default(uuid())
  tipo      String
  dados     String
  createdAt DateTime @default(now())
}

enum PedidoStatus {
  PENDENTE
  PREPARANDO
  PRONTO
  ENTREGUE
  CANCELADO
}
