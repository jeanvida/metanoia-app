generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categoria {
  id        String         @id @default(uuid())
  nome      String         @unique
  createdAt DateTime       @default(now())
  itens     ItemCardapio[]
}

model ItemCardapio {
  id          String       @id @default(uuid())
  nome        String
  descricao   String?
  descricaoES String?
  descricaoEN String?
  preco       Decimal      @db.Decimal(10, 2)
  categoriaId String
  ordem       Int          @default(0)
  createdAt   DateTime     @default(now())
  img         String?
  peso        Int?
  selo        String?
  pedidos     PedidoItem[]
  categoria   Categoria    @relation(fields: [categoriaId], references: [id])
  ingredientes ItemIngrediente[]

  @@map("itens_cardapio")
}

model Ingrediente {
  id                      String   @id @default(uuid())
  nome                    String
  unidade                 String   // kg, litro, unidade
  precoPorUnidade         Decimal  @db.Decimal(10, 4)
  quantidadePorEmbalagem  Decimal? @db.Decimal(10, 3)
  precoEmbalagem          Decimal? @db.Decimal(10, 2)
  pesoMedioPorUnidade     Decimal? @db.Decimal(10, 3) // Para itens como pão (1 un = 80g) quando comprado por unidade
  pesoPorPorcao           Decimal? @db.Decimal(10, 3) // Para itens comprados em kg/litro mas porcionados (ex: queijo 1 fatia = 15g, carne 1 disco = 70g)
  tipoPorcao              String?  // "fatia", "unidade", "porção" - como chamar a porção ao adicionar no produto
  ordem                   Int      @default(0)
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  itens                   ItemIngrediente[]

  @@map("ingredientes")
}

model ItemIngrediente {
  id             String       @id @default(uuid())
  itemId         String
  ingredienteId  String
  quantidade     Decimal      @db.Decimal(10, 3)
  custo          Decimal      @db.Decimal(10, 4)
  ordem          Int          @default(0)
  createdAt      DateTime     @default(now())
  item           ItemCardapio @relation(fields: [itemId], references: [id], onDelete: Cascade)
  ingrediente    Ingrediente  @relation(fields: [ingredienteId], references: [id])

  @@map("itens_ingredientes")
}

model Pedido {
  id              String       @id @default(uuid())
  clienteNome     String?
  clienteTelefone String?
  status          PedidoStatus @default(PENDENTE)
  total           Decimal      @db.Decimal(10, 2)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  itens           PedidoItem[]
}

model PedidoItem {
  id         String       @id @default(uuid())
  pedidoId   String
  itemId     String
  quantidade Int
  precoUnit  Decimal      @db.Decimal(10, 2)
  observacao String?
  item       ItemCardapio @relation(fields: [itemId], references: [id])
  pedido     Pedido       @relation(fields: [pedidoId], references: [id])
}

model TransacaoPagamento {
  id        String   @id @default(uuid())
  tipo      String
  dados     String
  createdAt DateTime @default(now())
}

enum PedidoStatus {
  PENDENTE
  PREPARANDO
  PRONTO
  ENTREGUE
  CANCELADO
}
