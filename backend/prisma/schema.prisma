generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categoria {
  id        String         @id @default(uuid())
  nome      String         @unique
  createdAt DateTime       @default(now())
  itens     ItemCardapio[]
}

model ItemCardapio {
  id           String            @id @default(uuid())
  nome         String
  descricao    String?
  preco        Decimal           @db.Decimal(10, 2)
  categoriaId  String
  createdAt    DateTime          @default(now())
  img          String?
  peso         Int?
  descricaoEN  String?
  descricaoES  String?
  selo         String?
  ordem        Int               @default(0)
  itensCombo   Json?
  pedidos      PedidoItem[]
  categoria    Categoria         @relation(fields: [categoriaId], references: [id])
  ingredientes ItemIngrediente[]

  @@map("itens_cardapio")
}

model Ingrediente {
  id                     String            @id @default(uuid())
  nome                   String
  unidade                String
  precoPorUnidade        Decimal           @db.Decimal(10, 4)
  quantidadePorEmbalagem Decimal?          @db.Decimal(10, 3)
  precoEmbalagem         Decimal?          @db.Decimal(10, 2)
  createdAt              DateTime          @default(now())
  updatedAt              DateTime          @updatedAt
  pesoMedioPorUnidade    Decimal?          @db.Decimal(10, 3)
  pesoPorPorcao          Decimal?          @db.Decimal(10, 3)
  tipoPorcao             String?
  ordem                  Int               @default(0)
  itens                  ItemIngrediente[]

  @@map("ingredientes")
}

model ItemIngrediente {
  id            String       @id @default(uuid())
  itemId        String
  ingredienteId String
  quantidade    Decimal      @db.Decimal(10, 3)
  custo         Decimal      @db.Decimal(10, 4)
  createdAt     DateTime     @default(now())
  ordem         Int          @default(0)
  ingrediente   Ingrediente  @relation(fields: [ingredienteId], references: [id])
  item          ItemCardapio @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@map("itens_ingredientes")
}

model Pedido {
  id              String       @id @default(uuid())
  clienteNome     String?
  clienteEmail    String?
  clienteTelefone String?
  clienteCPF      String?
  endereco        String?
  cep             String?
  frete           Decimal      @default(0) @db.Decimal(10, 2)
  total           Decimal      @db.Decimal(10, 2)
  observacao      String?
  status          PedidoStatus @default(SOLICITADO)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  itens           PedidoItem[]
}

model PedidoItem {
  id         String       @id @default(uuid())
  pedidoId   String
  itemId     String
  quantidade Int
  precoUnit  Decimal      @db.Decimal(10, 2)
  observacao String?
  item       ItemCardapio @relation(fields: [itemId], references: [id])
  pedido     Pedido       @relation(fields: [pedidoId], references: [id])
}

model TransacaoPagamento {
  id        String   @id @default(uuid())
  tipo      String
  dados     String
  createdAt DateTime @default(now())
}

enum PedidoStatus {
  SOLICITADO
  EM_ANDAMENTO
  SAIU_ENTREGA
  CONCLUIDO
  CANCELADO
}
