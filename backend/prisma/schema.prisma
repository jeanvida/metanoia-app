generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma" // caminho customizado para o backend
}

datasource db {
  provider = "postgresql"
  // url removida, Prisma 7 não permite mais aqui
}

// Model de Exemplo para o Cardápio
model ItemCardapio {
  id         String  @id @default(uuid())
  nome       String
  descricao  String
  preco      Decimal
  categoria  String

  @@map("itens_cardapio")
}
